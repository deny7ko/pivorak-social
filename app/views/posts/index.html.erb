<%= turbo_frame_tag "posts/page/#{@pagy.page}" do %>
  <% @posts.each do |post| %>
    <%= render partial: 'post', locals: { post: post } %>
  <% end %>

  <% if @pagy.next %>
    <%= turbo_frame_tag "posts/page/#{@pagy.next}", src: posts_path(page: @pagy.next), loading: :lazy do %>
      <%= render 'posts/placeholder_group' %>
    <% end %>
  <% end %>
<% end %>
